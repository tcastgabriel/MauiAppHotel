<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Spacing="15">

        
        <Label Text="Cálculo da Diária"
               FontFamily="RobotoBold"
               FontSize="50"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        
        <Frame Padding="10"
               CornerRadius="10"
               HasShadow="True"
               BackgroundColor="Black"
               BorderColor="{StaticResource Primary}">

            <VerticalStackLayout Spacing="15">

                
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, Auto, Auto"
                      ColumnSpacing="10"
                      RowSpacing="10"
                      HorizontalOptions="Center">

                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" TextColor="White" />
                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}" />
                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" TextColor="White" />
                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}" />
                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>

                
                <Frame Padding="10" Margin="0,10,0,0" CornerRadius="10" BackgroundColor="#111111">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Escolha sua Suíte"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Primary}" />
                        <Picker x:Name="pck_quarto"
                                Title="Selecione sua Acomodação"
                                TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                
                <Frame Padding="10" Margin="0,10,0,0" CornerRadius="10" BackgroundColor="#111111">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Período da Estadia"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Primary}" />

                        <HorizontalStackLayout Spacing="10" HorizontalOptions="CenterAndExpand">
                            <Label Text="Check-in:" TextColor="White" />
                            <DatePicker x:Name="dtpck_checkin" Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10" HorizontalOptions="CenterAndExpand">
                            <Label Text="Check-out:" TextColor="White" />
                            <DatePicker x:Name="dtpck_checkout" Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                
                <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                    <Button Text="Avançar"
                            CornerRadius="12"
                            FontSize="18"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Clicked="Button_Clicked" />

                    <Button Text="Sobre"
                            CornerRadius="12"
                            FontSize="18"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Clicked="Button_Clicked_1" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
